<p id="notice"><%= notice %></p>

<h1>Listing Notes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.description %></td>
        <td><%= note.user.email %></td>
        <td><%= link_to 'Show', note, id: "show_note#{note.id}", class: 'btn btn-sm btn-info', remote: true %></td>
        <td><%= link_to 'Edit', edit_note_path(note),  id: "edit_note#{note.id}", class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, id: "destroy_note#{note.id}", class: 'btn btn-sm btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path, class: 'btn btn-success' %>
